{{!-- views/show.handlebars --}}
<h1 class="mb-1 restaurant-show-title">{{restaurants.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils mr-2 "></i>
          類別：
        </span>
        {{restaurants.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt mr-2"></i>
          地址：
        </span>
        {{restaurants.location}}
        <a href="{{restaurants.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow  fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt mr-2"></i>
          電話：
        </span>
        {{restaurants.phone}}
      </p>

      <p class="mb-5">
        {{restaurants.description}}
      </p>
      
      <a href="/restaurants/{{ restaurants._id }}/edit" class="my-auto">edit</a>
      <a href="/" class="my-auto">back</a>
      <form action="/restaurants/{{ restaurants._id }}/delete" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-outline-danger">delete</button>
      </form>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurants.image}}" alt="{{restaurants.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>