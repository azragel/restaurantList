{{!-- views/index.handlebars --}}




<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      

        <h4 class="mb-2">尋找餐廳：</h4>
         <form action="/search">
         <div class="d-flex flex-column flex-sm-row align-items-sm-center">
         <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append me-5">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>

          
            <select class="form-control ml-5" id="sort" name="sort" >
              <option value="name_asc">A > Z</option>
              <option value="name_desc">Z > A</option>
              <option value="category_asc">類別</option>
              <option value="location_asc">地區</option>
            </select>
          

        </div>
        </div>

      </form>

      



      
     

    </div>
  </div>
</div>

<div class="container">
  <div class="position-relative">
    <a href="/new" class="position-absolute position-fixed start-100"><i class="fas fa-plus-circle fa-4x" style="color: rgb(62, 237, 39);"></i></a>
  </div>

</div>

<!-- restaurant list -->


<div class="container mt-5">
  <div class="row">

    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}


        
          <div class="card mb-1">
            <img class="card-img-top" src="{{this.image}}" alt="...">
            <div class="card-body p-3">
              <h6 class="card-title mb-1 text-secondary">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
          
        
        
        <div class="card-footer d-flex justify-content-end flex-wrap">
          
            <a href="./restaurants/{{ this._id }}" ><button class="btn btn-link btn-sm">detail</button></a>
          

          
            <a href="./restaurants/{{ this._id }}/edit"><button class="btn btn-link btn-sm">edit</button></a>
          
          
          
            <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" >
            <button type="submit" class="btn btn-outline-danger btn-sm" >delete</button>
            </form>
          
            
          
          

        </div>
        </div>
        

        {{/each}}


      </div>
    </div>
  </div>
</div>